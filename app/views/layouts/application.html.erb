<!DOCTYPE html>
<html>
	<head>
		<title>Pragmatic Programmer Online Store</title>
		<meta charset="UTF-8">
		<%= csrf_meta_tags %>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
	</head>
	<body class="<%= controller.controller_name %>">
		<div id="banner">
			<%= image_tag('logo.png') %>
			<%= @page_title || 'Pragmatic Bookshelf' %>
		</div>
		<div id="columns">
			<div id="side">
				<div id="cart">
					<%= render(@cart) %>
				</div>
				<ul>
					<li><a href="#">Home</a></li>
					<li><a href="#">Questions</a></li>
					<li><a href="#">News</a></li>
					<li><a href="#">Contact</a></li>
					<li><a>Today is: <%= Date.current %></a></li>
				</ul>
			</div>
			<div id="main">
				<%= yield %>
			</div>
		</div>
	</body>
</html>